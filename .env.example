# ==========================================
# Crime Lizard - Environment Configuration
# Copy this file to .env and fill in your values
# ==========================================

# ==========================================
# NETWORK CONFIGURATION
# ==========================================
# Use 56 for BSC Mainnet (default), 97 for BSC Testnet
# This affects both frontend and backend
CHAIN_ID=56
VITE_CHAIN_ID=56
VITE_DEBUG_MODE=false

# Admin wallet address (for admin panel access)
VITE_ADMIN_WALLET=0x44bD08F4BE61C77716d7acbB5f6F7BbDD6F0122C

# ==========================================
# CONTRACT ADDRESSES - MAINNET (BSC Chain ID: 56)
# These are used by both frontend (VITE_) and backend
# ==========================================

# Frontend mainnet addresses
VITE_CHARACTER_MAINNET=0x0000000000000000000000000000000000000000
VITE_GOLD_MAINNET=0x0000000000000000000000000000000000000000
VITE_SLOTS_MAINNET=0x0000000000000000000000000000000000000000
VITE_DICE_MAINNET=0x0000000000000000000000000000000000000000

# Backend mainnet addresses (set these to same as frontend mainnet)
CHARACTER_CONTRACT_ADDRESS_MAINNET=0x0000000000000000000000000000000000000000
GOLD_CONTRACT_ADDRESS_MAINNET=0x0000000000000000000000000000000000000000
SLOTS_CONTRACT_ADDRESS_MAINNET=0x0000000000000000000000000000000000000000
DICE_CONTRACT_ADDRESS_MAINNET=0x0000000000000000000000000000000000000000

# Legacy backend addresses (fallback, used if _MAINNET not set)
CHARACTER_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
GOLD_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
SLOTS_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
DICE_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# CLZD Token (for telegram bot, price lookups, etc.)
CLZD_TOKEN_ADDRESS=0xa5996Fc5007dD2019F9a9Ff6c50c1c847Aa64444

# ==========================================
# CONTRACT ADDRESSES - TESTNET (BSC Chain ID: 97)
# Only needed if switching to testnet for development
# ==========================================

# Frontend testnet addresses
VITE_CHARACTER_TESTNET=0xAE36a81Ebb327d4fCB2387B03690d6f7A085529B
VITE_GOLD_TESTNET=0x0000000000000000000000000000000000000000
VITE_SLOTS_TESTNET=0x231eD85A1A2d2d0533BBb0EA246FAC8C3941E29E
VITE_DICE_TESTNET=0x09DB6E39b5d6e659359a36015D25f9Fe72851C97

# Backend testnet addresses
CHARACTER_CONTRACT_ADDRESS_TESTNET=0xAE36a81Ebb327d4fCB2387B03690d6f7A085529B
GOLD_CONTRACT_ADDRESS_TESTNET=0x0000000000000000000000000000000000000000
SLOTS_CONTRACT_ADDRESS_TESTNET=0x231eD85A1A2d2d0533BBb0EA246FAC8C3941E29E
DICE_CONTRACT_ADDRESS_TESTNET=0x09DB6E39b5d6e659359a36015D25f9Fe72851C97

# ==========================================
# RPC PROVIDERS
# ==========================================

# Backend RPC (primary)
BSC_RPC_URL=https://bsc-dataseed1.binance.org

# Frontend RPC
VITE_PRIVATE_RPC_URL=
VITE_BSC_MAINNET_RPC=https://bsc-dataseed1.binance.org
VITE_BSC_MAINNET_WS=wss://bsc.publicnode.com
VITE_BSC_TESTNET_RPC=https://data-seed-prebsc-1-s1.binance.org:8545
VITE_BSC_TESTNET_WS=wss://bsc-testnet-rpc.publicnode.com

# ==========================================
# BLOCKCHAIN - BACKEND (Game Server)
# ==========================================
GAME_SERVER_PRIVATE_KEY=your_game_server_private_key_here

# ==========================================
# API KEYS
# ==========================================
XAI_API_KEY=your_xai_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
COINGECKO_API_KEY=your_coingecko_api_key_here

# ==========================================
# DATABASE
# ==========================================
MONGODB_URI=mongodb://user:password@localhost:27017/?authSource=admin

# ==========================================
# TELEGRAM BOT
# ==========================================
TELEGRAM_BOT_API=your_telegram_bot_token_here
BOT_USERNAME=YourBotUsername
TELEGRAM_CHAT_ID=your_chat_id_here
TELEGRAM_CHANNEL_ID=your_channel_id_here

# ==========================================
# PINATA IPFS
# ==========================================
PINATA_API_KEY=your_pinata_api_key_here
PINATA_API_SECRET=your_pinata_api_secret_here
PINATA_JWT=your_pinata_jwt_here

# ==========================================
# QUEST SYSTEM (Optional)
# ==========================================
QUEST_REWARD_ADDRESS=0x0000000000000000000000000000000000000000
QUEST_REWARD_NFT_ADDRESS=0x0000000000000000000000000000000000000000
ACHIEVEMENT_TOKENS_ADDRESS=0x0000000000000000000000000000000000000000

# ==========================================
# TIP BOT (Optional)
# ==========================================
TIP_BOT_MASTER_SEED=your_twelve_word_seed_phrase_here
TIP_BOT_ENCRYPTION_KEY=your_encryption_key_here
TIP_BOT_ADMINS=your_telegram_user_id
TIP_BOT_ADMIN_CHAT=your_admin_chat_id
